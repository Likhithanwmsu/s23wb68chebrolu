extends layout

block content
  h1= title
  - var hotels=[{hotels_location:"Maryville",hotels_numrooms:50,hotels_rating:10},{hotels_location:"Omaha",hotels_numrooms:40,hotels_rating:9},{hotels_location:"Chicago",hotels_numrooms:45,hotels_rating:8}]
  div(class="container-fluid")
  div(class="row")
   each l,index  in hotels
    div(class="col-sm-2" onclick =`buy(${index})`) #{l.hotels_location}, #{l.hotels_numrooms}, #{l.hotels_rating}
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }